<%- include("partials/header") -%>
<h1>
    Compose
</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <textarea type="text" name="postTitle" id="postTitle" class="form-control" placeholder="Enter the title..."
            rows="1"><%= postTitleIfExists %></textarea>
        <span class="titleExists"><%= warningTitleExists%></span>
    </div>
    <div class="form-group">
        <label for="postBody" class="">Post</label>
        <textarea type="text" name="postBody" id="postBody" class="form-control" placeholder="Write your post..."
            rows="5"><%= postContentIfExists %></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Publish</button>
</form>
<%- include("partials/footer") -%>