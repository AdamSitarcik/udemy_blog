<%- include("partials/header") -%>
<h1>
    Home
</h1>
<p><%= homeContent %></p>
<button class="btn btn-primary btn-lg" onclick="location.href='/compose'" type="button">New post</button>

<% if(posts.length > 0) { %>
<h1>Your posts</h1>

<% posts.forEach(function(e) { %>
<div class="postItem">
    <div class="title-div">
        <h2><%= e.title %></h2>
        <div class="delete-date-div">
            <form action="/delete" method="post">
                <button type="submit" class="deleteBtn" name="deleteBtn" value="<%= e._id %>"><i
                        class="fa-solid fa-trash-can delete-icon"></i></button>
            </form>
            <span class="date"><%= e.date %></span>
        </div>
    </div>

    <p class="postBody-short"> <%= e.content.substring(0,150) + " ..." %> <a href="/posts/<%= e.link %>">Read more</a>
    </p>
</div>
<% }) %>
<% } %>



<%- include("partials/footer") -%>