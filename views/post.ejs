<%- include("partials/header") -%>
<div class="title-div">
    <h1><%= postTitle %></h1>
    <div class="delete-date-div">
        <form action="/delete" method="post">
            <button type="submit" class="deleteBtn" name="deleteBtn" value="<%= postID %>"><i
                    class="fa-solid fa-trash-can delete-icon"></i></button>
        </form>
        <span class="date"><span class="date"><%= postDate %></span>
    </div>
</div>
<p><%= postBody %></p>
